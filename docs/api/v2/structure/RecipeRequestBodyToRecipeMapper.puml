@startuml
skinparam linetype ortho
skinparam backgroundColor #1E1E1E
skinparam defaultTextAlignment center
skinparam ArrowColor #B0C4DE
skinparam shadowing false
skinparam FontColor #FFFFFF
skinparam classFontColor #FFFFFF
skinparam classAttributeFontColor #FFFFFF
skinparam classMethodFontColor #FFFFFF

skinparam class {
  BackgroundColor #2D2D2D
  BorderColor #8A8A8A
  FontColor #E0E0E0
}

!include Mapper.puml
!include ToEntityMapper.puml

interface RecipeRequestBodyToRecipeMapper extends Mapper, ToEntityMapper {
    + void map(RecipeRequestBody source, Recipe target)
    + Recipe mapToEntity(RecipeRequestBody recipeRequestBody)
}

class DefaultRecipeRequestBodyToRecipeMapper implements RecipeRequestBodyToRecipeMapper {
    + Recipe mapToEntity(RecipeRequestBody recipeRequestBody)
    + void map(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapName(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapImage(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapDescription(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapDifficulty(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapCategories(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapIngredients(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapServings(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapCookingTime(RecipeRequestBody recipeRequestBody, Recipe recipe)
    - void mapInstructions(RecipeRequestBody recipeRequestBody, Recipe recipe)
}
@enduml