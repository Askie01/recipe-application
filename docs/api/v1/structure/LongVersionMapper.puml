@startuml
skinparam linetype ortho
skinparam backgroundColor #1E1E1E
skinparam defaultTextAlignment center
skinparam ArrowColor #B0C4DE
skinparam shadowing false
skinparam FontColor #FFFFFF
skinparam classFontColor #FFFFFF
skinparam classAttributeFontColor #FFFFFF
skinparam classMethodFontColor #FFFFFF

skinparam class {
  BackgroundColor #2D2D2D
  BorderColor #8A8A8A
  FontColor #E0E0E0
}

!include Mapper.puml
!include LongVersionValidator.puml

interface LongVersionMapper extends Mapper {
    + void map(HasLongVersion source, HasLongVersion target)
}

class SimpleLongVersionMapper implements LongVersionMapper {
    + void map(HasLongVersion source, HasLongVersion target)
    - void mapVersion(HasLongVersion source, HasLongVersion target)
}

class ValidatedLongVersionMapper implements LongVersionMapper {
    - LongVersionValidator longVersionValidator

    + void map(HasLongVersion source, HasLongVersion target)
    - boolean isValid(HasLongVersion hasLongVersion)
    - mapVersion(HasLongVersion source, HasLongVersion target)
}

ValidatedLongVersionMapper --> LongVersionValidator
@enduml