@startuml
skinparam linetype ortho
skinparam backgroundColor #1E1E1E
skinparam defaultTextAlignment center
skinparam ArrowColor #B0C4DE
skinparam shadowing false
skinparam FontColor #FFFFFF
skinparam classFontColor #FFFFFF
skinparam classAttributeFontColor #FFFFFF
skinparam classMethodFontColor #FFFFFF

skinparam class {
  BackgroundColor #2D2D2D
  BorderColor #8A8A8A
  FontColor #E0E0E0
}

!include Mapper.puml
!include InstructionsValidator.puml

interface InstructionsMapper extends Mapper {
    + void map(HasInstructions source, HasInstructions target)
}

class ValidatedInstructionsMapper implements InstructionsMapper {
    - InstructionsValidator instructionsValidator

    + void map(HasInstructions source, HasInstructions target)
    - boolean isValid(HasInstructions hasInstructions)
    - void mapInstructions(HasInstructions source, HasInstructions target)
}

ValidatedInstructionsMapper --> InstructionsValidator
@enduml